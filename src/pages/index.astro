---
import Layout from "@layouts/Layout.astro";
import Featured from "@data/featured.json";

const title = "Home";
---

<Layout title={title}>

  <!-- HERO -->
  <section class="relative w-full h-screen flex items-center justify-center overflow-hidden">
    <img 
      src="https://ik.imagekit.io/ur4olhqhr/background-home.jpg?updatedAt=1759831123520" 
      alt="Credits to Freepik" 
      class="absolute inset-0 w-full h-full object-cover -z-10"
    />
    <div class="absolute inset-0 bg-black/40 -z-0"></div>
    <h1 class="relative text-white text-4xl sm:text-5xl lg:text-6xl text-center tracking-widest uppercase p-4 font-bold drop-shadow-lg">
      Hi, I'm Christian
    </h1>
  </section>

  <!-- CONTENT -->
  <section class="max-w-5xl mx-auto px-6 py-16">

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      
      {Featured.map((project) => (

        <div class="relative overflow-hidden h-[350px] cursor-pointer group rounded-xl shadow-lg">
          <a href={project.link}>
            <img 
              src={project.image} alt={project.name}
              class="w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-110"
            />
            <div class="absolute left-0 bottom-0 w-full text-center font-bold p-4 bg-black/60 text-white uppercase tracking-wider text-sm">
              {project.name}
            </div>
          </a>
        </div>

      ))}

    </div>
  </section>
</Layout>
