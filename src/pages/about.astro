---
import Layout from "@layouts/Layout.astro";

const title = "About Me";
---

<Layout title={title}>

  <!-- ARTICLE CONTENT -->
  <article class="max-w-5xl mx-auto px-6 py-16 flex flex-col space-y-12">

    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-white uppercase tracking-widest text-center drop-shadow-lg px-4">
      About Me
    </h1>

    <!-- TEXTO INICIAL -->
    <div class="space-y-4 text-lg md:text-xl leading-relaxed text-gray-300">
      <p><strong>sabukaru.online</strong> connects people with culture, products with context, subcultures with eras, and artists with the world.</p>
      <p>The magazine is based in Tokyo; the content is global.</p>
      <p>The inner sabukaru team spans a worldwide network of industry insiders, experts, writers, and creatives.</p>
    </div>

    <!-- IMAGEN CENTRAL (Opcional) -->
    <img 
      src="https://substackcdn.com/image/fetch/$s_!5j8R!,f_auto,q_auto:good,fl_progressive:steep/https%3A%2F%2Fsubstack-post-media.s3.amazonaws.com%2Fpublic%2Fimages%2Fac8c5156-fe9f-4fe7-ae6b-45a2ff2b5dbf_1000x635.jpeg" 
      alt="Sonic Youth" 
      class="w-full rounded-2xl shadow-lg object-cover"
    />

    <div class="h-px bg-white"></div>

  </article>

</Layout>