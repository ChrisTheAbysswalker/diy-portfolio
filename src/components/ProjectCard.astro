---
// Props
export interface Project {
  name: string;
  description: string;
  image: string;
  link?: string;
  tags?: string[];
}

const { project } = Astro.props as { project: Project };
---

<div class="bg-neutral-950 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl transition transform hover:-translate-y-1">
  {/* Imagen */}
  <div class="relative h-64 bg-neutral-800">
    <img 
      src={project.image} 
      alt={project.name} 
      class="w-full h-full object-cover transition-transform duration-500 ease-in-out hover:scale-110"
    />
    {/* Overlay con nombre */}
    <div class="absolute bottom-2 left-2 bg-black/60 text-white px-3 py-1 rounded-full text-sm font-bold">
      {project.name}
    </div>
  </div>

  {/* Contenido */}
  <div class="p-6">
    <h3 class="text-xl font-bold text-white mb-2">{project.name}</h3>
    <p class="text-gray-300 text-sm mb-3">{project.description}</p>

    {/* Etiquetas opcionales */}
    {project.tags && project.tags.length > 0 && (
      <div class="mb-3 flex flex-wrap gap-2">
        {project.tags.map((tag) => (
          <span class="bg-neutral-700 text-white px-3 py-1 rounded-full text-xs font-semibold">{tag}</span>
        ))}
      </div>
    )}

    {/* Link */}
    {project.link && (
      <a 
        href={project.link} 
        class="inline-block mt-3 text-white text-sm font-semibold hover:underline"
      >
        See Project â†’
      </a>
    )}
  </div>
</div>
